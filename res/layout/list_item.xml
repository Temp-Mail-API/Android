<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/selectItem"
                android:background="@drawable/background_list_selector">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/messageAutor"
              android:textColor="@drawable/textcolor_list_selector"
              android:singleLine="true"
              android:layout_marginLeft="10dp"
              android:text="Имя отправителя"
              android:layout_toLeftOf="@+id/messageTime"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_marginTop="10dp"/>

    <TextView
            android:id="@+id/messagePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/textcolor_list_selector"
            android:textSize="10sp"
            android:singleLine="true"
            android:text="Превью"
            android:layout_below="@+id/messageAutor"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_alignLeft="@+id/messageAutor"
            android:layout_alignRight="@+id/messageAutor"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_marginRight="10dp"
            android:textColor="@drawable/textcolor_list_selector"
            android:id="@+id/messageTime"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/messageAutor"
            android:layout_alignBottom="@+id/messageAutor"
/>
</RelativeLayout>